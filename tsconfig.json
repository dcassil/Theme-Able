{
  "compilerOptions": {
    // Default
    "target": "ES6", 
    "esModuleInterop": true, 
    "forceConsistentCasingInFileNames": true,
    "strict": false, 
    "skipLibCheck": true,
    "typeRoots": ["./types"],

    // Added
    "jsx": "react-jsx", 
    "module": "ESNext",  
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true                          /* Skip type checking all .d.ts files. */
  },
  "include": ["**/*.tsx", "src/index.ts"]
}
